#!/bin/sh

export CLASSPATH=src/main/groovy
if  [ "$OPT"=="" ]; then
  export OPT="-Dgroovyserver.verbose=true"
fi

GROOVYSERV_HOME=`dirname $0`/..

exec $GROOVY_HOME/bin/groovy -cp $GROOVYSERV_HOME/src/main/groovy:$GROOVYSERV_HOME/target/classes $OPT $GROOVYSERV_HOME/src/main/groovy/org/jggug/kobo/groovyserv/GroovyServer.groovy
