#!/bin/sh

SERVER_NOT_RUNNING=201

`dirname $0`/groovyclient.exe "$@"
stat=$?
while [ "$stat" = "$SERVER_NOT_RUNNING" ]; do
  if [ ! -d ~/.groovy ]; then
    mkdir ~/.groovy
    if [ ! -d ~/.groovy/groovyserver ]; then
      mkdir ~/.groovy/groovyserver 
    fi
  fi
  `dirname $0`/groovyserver >> ~/.groovy/groovyserver/groovyserver.log 2>&1
  `dirname $0`/groovyclient.exe "$@"
  stat=$?
done


  

