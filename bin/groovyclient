#!/bin/sh

`dirname $0`/groovyclient.exe "$@"
stat=$?
if [ $stat == 201 ]; then
  if [ ! -d ~/.groovy/groovyserver ]; then
    mkdir ~/.groovy/groovyserver 
  fi
  `dirname $0`/groovyserver > ~/.groovy/groovyserver/$$.log 2>&1 &
  sleep 5
  exec `dirname $0`/groovyclient.exe "$@"
else
  exit $stat
fi
  

