#-------------------------------------------
# Setup and Initialize
#-------------------------------------------

if [ "x$GROOVY_HOME" = "x" ]; then
    echo "environment variable GROOVY_HOME must be set."
    exit 1
fi

GROOVYSERVER_WORK_DIR=~/.groovy/groovyserver
if [ ! -d $GROOVYSERVER_WORK_DIR ]; then
    mkdir -p $GROOVYSERVER_WORK_DIR
fi

PORT=1961
if [ "$GROOVYSERVER_PORT" != "" ]; then
    export PORT=$GROOVYSERVER_PORT
fi

#-------------------------------------------
# Handle arguments
#-------------------------------------------

while [ $# -gt 0 ]; do
    case $1 in
        -q)
            export GROOVYSERV_OPTS="$GROOVYSERV_OPTS -Dgroovyserver.verbose=false"
            shift
            ;;
        -v)
            export GROOVYSERV_OPTS="$GROOVYSERV_OPTS -Dgroovyserver.verbose=true"
            shift
            ;;
        -p)
            shift
            PORT=$1
            export GROOVYSERV_OPTS="$GROOVYSERV_OPTS -Dgroovyserver.port=$PORT"
            shift
            ;;
        -[kr])
            GROOVYSERVER_PID_FILE=$GROOVYSERVER_WORK_DIR/pid-$PORT
            if [ -f $GROOVYSERVER_PID_FILE ]; then
                PID=`cat $GROOVYSERVER_PID_FILE`
                kill $PID
                echo "kill groovy server $PID($PORT)"
                rm $GROOVYSERVER_PID_FILE
            else
                echo "pid file $GROOVYSERVER_PID_FILE not found"
            fi
            if [ "$1" = "-k" ]; then
                exit 0
            fi
            echo "restart groovy server"
            shift
            ;;
        *)
            echo "Usage: `basename $0` [options]"
            echo "options:"
            echo "  -v       verbose output. print debugging information etc."
            echo "  -q       quiet (default)"
            echo "  -k       kill the running groovyserver"
            echo "  -r       restart groovyserver"
            echo "  -p port  specify the port for groovyserver"
            exit 1
            ;;
    esac
done

#-------------------------------------------
# Check multi invoking
#-------------------------------------------

GROOVYSERVER_PID_FILE=$GROOVYSERVER_WORK_DIR/pid-$PORT
if [ -f $GROOVYSERVER_PID_FILE ]; then
    PID=`cat $GROOVYSERVER_PID_FILE`
    if ! ps -p $PID | grep $PID > /dev/null; then
        rm $GROOVYSERVER_PID_FILE
    else
        echo "ERROR: Groovy server already running, pid is $PID."
        echo "To kill the server, run \"groovyserver -k\"."
        echo "If groovy server does not ruuning actually,"
        echo "retry after removing file $GROOVYSERVER_PID_FILE."
        exit 1
    fi
fi

#-------------------------------------------
# Invoke server
#-------------------------------------------

GROOVYSERV_HOME=`dirname $0`/..
CP="$GROOVYSERV_HOME/lib/jna-3.2.2.jar:$CP"
CP="$GROOVYSERV_HOME/lib/groovyserv-0.2-SNAPSHOT.jar:$CP"
$GROOVY_HOME/bin/groovy -cp $CP $GROOVYSERV_OPTS -e "org.jggug.kobo.groovyserv.GroovyServer.main(args)" &

#-------------------------------------------
# Store PID
#-------------------------------------------

PID=$!
if ps -p $PID | grep $PID > /dev/null; then
    echo $PID > $GROOVYSERVER_PID_FILE
else
    echo "ERROR: cannot store PID to file $GROOVYSERVER_PID_FILE"
    exit 1
fi

echo "groovy server $PID($PORT) is successfully started."

