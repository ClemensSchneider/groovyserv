<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
	  <directory>bin</directory>
	  <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>groovyclient</include>
        <include>groovyclient.rb</include>
        <include>groovyclient.exe</include>
        <include>groovyserver</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>

    <fileSet>
	  <directory>target</directory>
	  <outputDirectory>/lib</outputDirectory>
      <includes>
		<include>groovyserv-*-SNAPSHOT.jar</include>
      </includes>
    </fileSet>

    <fileSet>
	  <directory>target</directory>
	  <outputDirectory>/srcn</outputDirectory>
      <includes>
		<include>src/*</include>
      </includes>
    </fileSet>

  </fileSets>

  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>/lib</outputDirectory>

      <includes>
		<include>net.java.dev.jna:*</include>
      </includes>
    </dependencySet>
  </dependencySets>


</assembly>
