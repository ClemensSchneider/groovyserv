	  <plugin>
		<artifactId>maven-assembly-plugin</artifactId>
		<configuration>
		  <descriptors>
			<descriptor>src/main/assembly/bin.xml</descriptor>
			<descriptor>src/main/assembly/src.xml</descriptor>
		  </descriptors>
		</configuration>
	  </plugin>

	  <plugin>
		<groupId>org.codehaus.mojo</groupId>
		<artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
			<phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
			<configuration>
			  <executable>gcc</executable>
			  <arguments>
				<argument>-g</argument>
				<argument>-o</argument>
				<argument>bin/groovyclient.exe</argument>
				<argument>src/main/c/groovyclient.c</argument>
			  </arguments>
			</configuration>
          </execution>
        </executions>
	  </plugin>

      <plugin>
